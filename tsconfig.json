{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "allowJs": false,
        "noImplicitAny": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".vscode",
        ".idea"
    ]
}
